<% if(scrapedData.length <= 0) {%>

<p class="error-text">
    There was a problem retrieving results related to your search. Try again in
    a little while.
</p>

<%} else {%>

<ul class="search-result-list unstyled-list">
    <% for(let data of scrapedData) { %>
    <li class="search-result">
        <div class="info">
            <span class="product-name"><%= data.productName %></span>
            <span class="product-price"
                >Listed Price: <%= data.productPrice %></span
            >
        </div>
        <div class="actions">
            <a href="<%= data.storeUrl %>">Visit Store</a>
            <button
                class="button btn-search"
                data-add-shopping-list-from-search="<%= data.productName %>:<%= data.productPrice %>"
            >
                <i class="fa-solid fa-plus"></i>Add to shopping list
            </button>
        </div>
    </li>
    <% } %>
</ul>
<% } %>
